<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <div class="container">
    <div class="col">
      <div class="col-md-4 offset-md-4">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Content</th>
              <th>Created_by</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.title %></td>
                <td><%= article.content %></td>
                <td><%= article.user.email %></td>
                <td>
                  <div class="btn-stack">
                    <%= link_to 'Show', article, class: "btn btn-success" %>
                    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary" %>
                     <%#= link_to 'Category', categories_path(article_id: article.id), class: "btn btn-primary" %>
                    <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</table>

<br>

