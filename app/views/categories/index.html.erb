<h1>Listing Categories</h1>
<table>
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>
                  <div class="btn-stack">
                    <%= link_to 'Show', category, class: "btn btn-success" %>
                    <%= link_to 'Edit', edit_category_path(category), class: "btn btn-secondary" %>
                    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</table>

<br>
<div class="mb-4 mt-2">
  <%= link_to 'New Category', new_category_path, class: "btn btn-sm btn-primary" %> |
  <%= link_to 'Back', articles_path, class: "btn btn-sm btn-secondary" %>
</div>
